<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.guqing.violet.app.admin.mapper.RoleMapper">
    <!-- 自定义结果映射 -->
    <resultMap id="roleWithMenuResultMap" type="xyz.guqing.violet.app.admin.model.entity.RoleDO">
        <id property="id" column="id"/>
        <result property="roleName" column="role_name"/>
        <result property="remark" column="remark"/>
        <result property="isDefault" column="is_default"/>
        <result property="deleted" column="deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <!-- 多表关联映射 -->
        <collection property="menuIds" javaType="java.util.Set" ofType="java.lang.Long">
            <result column="menu_id" property="menuId"/>
        </collection>
    </resultMap>

    <select id="findUserRoleMenu" parameterType="xyz.guqing.violet.app.admin.model.param.RoleQuery"
            resultMap="roleWithMenuResultMap">
        select distinct
            role.id,
            role.role_name,
            role.remark,
            role.is_default,
            role.deleted,
            role.create_time,
            role.modify_time,
            rm.menu_id menu_id
        from role
          left join role_menu rm on role.id = rm.role_id
        where 1=1
        <if test="id != null and id != ''">
            AND role.id = #{id}
        </if>
        <if test="roleName != null and roleName != ''">
            AND role.roleName = #{roleName}
        </if>
        <if test="remark != null and remark != ''">
            AND role.remark = like CONCAT('%',#{remark},'%')
        </if>
        order by create_time
        limit ${queryRequest.pageSize * (queryRequest.current-1)},
        #{queryRequest.pageSize}
    </select>

    <select id="countRoleBy" parameterType="xyz.guqing.violet.app.admin.model.param.RoleQuery"
            resultType="java.lang.Long">
        select count(*) from role
        where 1=1
        <if test="id != null and id != ''">
            AND role.id = #{id}
        </if>
        <if test="roleName != null and roleName != ''">
            AND role.roleName = #{roleName}
        </if>
        <if test="remark != null and remark != ''">
            AND role.remark = like CONCAT('%',#{remark},'%')
        </if>
    </select>
</mapper>